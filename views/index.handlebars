<h1 class="center" id="loginSignBanner">Login/Signup to join the blog!!</h1>

<h3 class="center" id="loginBanner">Login:</h3>
<form id="loginForm">
    <input type="text" name="email" id='loginEmail' placeholder="email"/>
    <br>
    <input type="password" name="password" id='loginPassword'  placeholder="password"/>
    <br>
    <button id="loginBtn">Login</button>
</form>

<h3 class="center" id="signUpBanner">signup:</h3>
<form id="signupForm">
    <input type="text" name="username" id='signupUsername' placeholder="username"/>
    <br>
    <input type="text" name="email" id='signupEmail' placeholder="email"/>
    <br>
    <input type="password" name="password" id='signupPassword' placeholder="password"/>
    <br>
    <button id="SignupBtn">Signup</button>
</form>

<script src="/js/script.js"></script>